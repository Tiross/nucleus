{
  "extends": [
    "stylelint-config-standard",
    "stylelint-config-concentric-order"
  ],
  "plugins": [
    "stylelint-scss"
  ],
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        ignoreAtRules: [
          'extend',
          'at-root',
          'debug',
          'warn',
          'error',
          'if',
          'else',
          'for',
          'each',
          'while',
          'mixin',
          'include',
          'content',
          'return',
          'function'
        ]
      }
    ],
    "number-leading-zero": "never",
    "order/order": [],
    "value-no-vendor-prefix": true
  }
}
